@model IEnumerable<AlbanWebApplication.Models.Professionel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form asp-controller="Professionels" asp-action="Index" method="get">
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <p>
        <form asp-controller="Professionels" asp-action="ImportProfessionalsFromExcel" method="post">
            <input type="submit" value="Import Excel" />
        </form>
    </p>
    <p>
        <form asp-controller="Professionels" asp-action="UploadExcelPath" method="post">
            <label for="fileInput">Sélectionner un fichier :</label>
            <input type="file" name="file" id="fileInput" />
        </form>
    </p>
</form>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Siret)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Siret)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
